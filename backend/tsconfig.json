{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./backend/dist",
    "rootDir": "./backend/src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "backend/src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

